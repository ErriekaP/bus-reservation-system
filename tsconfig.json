{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/components/Passenger.jsx", "src/app/components/AddBus.jsx", "src/app/components/Admin.jsx", "src/app/components/ViewBus.jsx", "src/app/components/AddTicket.jsx", "src/app/components/AddTicket.jsx", "src/app/auth/[destinationId].js"],
  "exclude": ["node_modules"]
}
